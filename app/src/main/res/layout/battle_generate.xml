<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_battle_type"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.sda_a5_project_2023_gerardheffernan.BattleGenerate">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/angel"
        android:id="@+id/imageView9"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/battletypetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:id="@+id/textView" />

    <Button
        android:text="@string/randbattle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RandoBattle"
        android:layout_below="@id/imageView9"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
